{
	"name": "@pampas-store/db",
	"type": "module",
	"exports": {
		".": {
			"default": "./src/index.ts"
		},
		"./*": {
			"default": "./src/*.ts"
		}
	},
	"scripts": {
		"db:local": "turso dev --db-file local.db",
		"db:push": "prisma db push",
		"db:generate": "prisma generate",
		"db:migrate": "prisma migrate dev",
		"db:studio": "prisma studio",
		"platform:push": "prisma db push --config=prisma-platform.config.ts",
		"platform:generate": "prisma generate --config=prisma-platform.config.ts",
		"platform:studio": "prisma studio --config=prisma-platform.config.ts",
		"seed:platform": "bun run src/seed-platform.ts",
		"seed:admin": "bun run src/seed-admin.ts"
	},
	"devDependencies": {
		"better-auth": "catalog:",
		"prisma": "^7.1.0",
		"typescript": "catalog:",
		"@pampas-store/config": "workspace:*"
	},
	"dependencies": {
		"@libsql/client": "^0.15.0",
		"@prisma/client": "catalog:",
		"@prisma/adapter-libsql": "^7.1.0",
		"dotenv": "catalog:",
		"zod": "catalog:"
	}
}
