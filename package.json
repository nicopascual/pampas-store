{
	"name": "pampas-store",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dotenv": "^17.2.2",
			"zod": "^4.1.13",
			"typescript": "^5",
			"@types/bun": "^1.3.4",
			"elysia": "^1.3.21",
			"@orpc/server": "^1.12.2",
			"@orpc/openapi": "^1.12.2",
			"@orpc/zod": "^1.12.2",
			"better-auth": "^1.4.7",
			"@orpc/client": "^1.12.2",
			"@prisma/client": "^7.1.0"
		}
	},
	"type": "module",
	"scripts": {
		"check": "biome check --write .",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @pampas-store/db db:push",
		"db:studio": "turbo -F @pampas-store/db db:studio",
		"db:generate": "turbo -F @pampas-store/db db:generate",
		"db:migrate": "turbo -F @pampas-store/db db:migrate",
		"db:local": "turbo -F @pampas-store/db db:local"
	},
	"dependencies": {
		"dotenv": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@prisma/client-runtime-utils": "^7.2.0",
		"@types/bun": "catalog:",
		"shadcn": "^3.6.2",
		"turbo": "^2.6.3",
		"typescript": "catalog:"
	},
	"packageManager": "bun@1.3.5"
